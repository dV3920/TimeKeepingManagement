<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/signup"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="100sp"
        android:id="@+id/txtText1"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="@string/tv_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TextView>
    <EditText
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/edSignUp_Username"
        android:drawableLeft="@drawable/ic_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Tài khoản"
        android:textSize="24sp">
    </EditText>
    <EditText
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="textPassword"
        android:id="@+id/edSignUp_Passwd"
        android:drawableLeft="@drawable/ic_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Mật khẩu"
        android:textSize="24sp">
    </EditText>
    <EditText
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="text"
        android:id="@+id/edSignUp_IdEmployee"
        android:drawableLeft="@drawable/ic_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="ID công nhân"
        android:textSize="24sp">
    </EditText>
<!--    <Button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp_SignUp"
        android:background="@drawable/custom_button"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"

        android:textSize="30sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Đã có tài khoản ?"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/btnSignUp_Login"
            android:text="Đăng nhập"
            android:background="@drawable/custom_button"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>

