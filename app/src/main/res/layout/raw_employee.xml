<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@drawable/gradient_listview_background"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_weight="3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10dp"
            style="@style/style4tvLabel"
            android:text="@string/tv_id_employee" />

        <TextView
            android:id="@+id/tvIdEmployee"
            android:layout_width="wrap_content"
            style="@style/style4edInput"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10dp"
            style="@style/style4tvLabel"
            android:text="@string/tv_firstname_employee" />

        <TextView
            android:id="@+id/tvFistNameEmployee"
            android:layout_width="wrap_content"
            style="@style/style4edInput"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10dp"
            style="@style/style4tvLabel"
            android:text="@string/tv_lastname_employee" />

        <TextView
            android:id="@+id/tvLastNameEmployee"
            android:layout_width="wrap_content"
            style="@style/style4edInput"  />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10dp"
            android:text="@string/tv_factory_employee"
            style="@style/style4tvLabel" />

        <TextView
            android:id="@+id/tvFactory"
            android:layout_width="wrap_content"
            style="@style/style4edInput" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivRemoveEmployee"
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:tint="#FF0000"
        android:src="@drawable/ic_baseline_remove_circle_outline_24" />
</LinearLayout>
</LinearLayout>